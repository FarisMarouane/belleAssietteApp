                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li> <a id="login" href="/login">Login</a></li>
                        <li> <a id="signUp" href="/register">Sign-Up</a></li>
                        <% } else{ %>
                            <li> <a id="new" href="/inventory/new">Add new ingredient</a></li>
                            <li> <a href="/logout">Logout</a></li>
                            <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container text-center" id="containerHome">
        <h1>The Kitchen Inventory App</h1>
        <a href="/inventory">
            <input class="btn btn-success" type="Button" value="Check your inventory">
